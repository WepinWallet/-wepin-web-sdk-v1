{
  "name": "@wepin/login-js",
  "version": "0.0.8",
  "description": "Wepin Login Library V1 for Web",
  "author": "IoTrust, Co., Ltd.",
  "homepage": "https://github.com/WepinWallet/wepin-web-sdk-v1/",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s -l build:swc build:dts",
    "build:swc": "yarn run swc ./src -d ./dist --strip-leading-paths",
    "build:dts": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "run-p -l dev:swc dev:dts",
    "dev:swc": "yarn build:swc -w --source-maps inline",
    "dev:dts": "yarn build:dts --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@wepin/common": "^0.0.2",
    "@wepin/fetch-js": "^0.0.7",
    "@wepin/modal-js": "^0.0.3",
    "@wepin/storage-js": "^0.0.4",
    "secp256k1": "^5.0.0",
    "sha256": "^0.2.0"
  },
  "devDependencies": {
    "@types/secp256k1": "^4.0.6",
    "@types/sha256": "^0.2.2"
  }
}
