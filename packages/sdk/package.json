{
  "name": "@wepin/sdk-js",
  "version": "0.0.11",
  "description": "Wepin Widget Javascript SDK for Web",
  "author": "IoTrust, Co., Ltd.",
  "homepage": "https://github.com/WepinWallet/wepin-web-sdk-v1/",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s -l build:swc build:dts",
    "build:swc": "yarn run swc ./src -d ./dist --strip-leading-paths",
    "build:dts": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "run-p -l dev:swc dev:dts",
    "dev:swc": "yarn build:swc -w --source-maps inline",
    "dev:dts": "yarn build:dts --watch --preserveWatchOutput"
  },
  "keywords": [
    "wepin",
    "wepinwallet",
    "wallet"
  ],
  "dependencies": {
    "@metamask/safe-event-emitter": "^3.1.1",
    "@wepin/common": "^0.0.3",
    "@wepin/fetch-js": "^0.0.8",
    "@wepin/modal-js": "^0.0.5",
    "@wepin/storage-js": "^0.0.5",
    "jwt-decode": "^4.0.0"
  },
  "devDependencies": {}
}
