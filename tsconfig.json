{
  "compilerOptions": {
    "rootDir": "./",
    "lib": ["es5", "es6", "es2017", "dom"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types/", "./types", "./node_modules", "./packages/*/src/types"],
    "types": ["vite/client"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./packages/*/src"],
  "exclude": ["node_modules"]
}

